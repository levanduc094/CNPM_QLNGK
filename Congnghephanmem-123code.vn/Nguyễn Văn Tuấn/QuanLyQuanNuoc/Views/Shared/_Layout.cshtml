<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý quán nước</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        .nav.nav-list{
            align-items: center;
        }

        .nav.nav-list > i {
            margin-right: 1rem;
            width: 2rem;
        }

        .menuitem {
            /*background-color: #108Dc5;*/
            background-color: #2e353d;
        }

        a {
            color: #fff;
        }

        .col-list-view > p > a, .col-list-view > table > tbody > tr > td > a {
            color: green;
        }

            .col-list-view > p > a:hover, .col-list-view > table > tbody > tr > td > a:hover {
                color: red;
            }

        a:hover {
            color: gray;
            text-decoration: none;
        }

        .navbar-header {
            position: relative;
            width: 100% !important;
            height: 50px;
        }

            .navbar-header > a {
                position: absolute;
                /*left: 50%;*/
                margin: auto;
                transform: translateX(-50%);
                top: 0;
                color: #fff !important;
                /*font-size: 30px;*/
            }

            .navbar-header > .navbar-buttons {
                position: relative;
            }

                .navbar-header > .navbar-buttons > ul {
                    position: absolute;
                    right: 0;
                }
    </style>
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#2e353d;border:0px">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Quản lý quán nước", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div class="navbar-buttons navbar-header pull-right " role="navigation">
                    <ul class="nav ace-nav">
                        <li class="light-blue">
                            <a data-toggle="dropdown" href="#" class="dropdown-toggle">                                
                                <span class="user-info">
                                    Xin chào,
                                    @if (@Session["Username"] == null)
                                    {
                                        Response.Redirect("~/Login/Login");
                                    }
                                        else
                                        {
                                            @Session["Displayname"].ToString()
                                                                            }
                                </span>
                                @*<i class="ace-icon fa fa-caret-down"></i>*@
                            </a>
                            <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                                <li>
                                    <a href="#">
                                        <i class="ace-icon fa fa-user"></i>
                                        Thông tin cá nhân
                                    </a>
                                </li>
                                <li class="divider"></li>

                                <li>
                                    @Html.ActionLink("Đăng xuất", "Logout", "Login")                                                                                                                    
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>                
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="row " style="height:800px" color:whitea>
            <div class="col-sm-2 menuitem">
                <div class="navbar">
                    <ul class="navbar-nav text-center" style="margin-top:20px;color:white">
                        <li class="nav nav-list "><i class="fas fa-home"></i>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                        <li class="nav nav-list "><i class="fas fa-coffee"></i>@Html.ActionLink("Thực đơn món ăn", "Index", "Foods")</li>
                        <li class="nav nav-list "><i class="fas fa-coffee"></i>@Html.ActionLink("Thực đơn đồ uống", "Index", "Drinks")</li>
                        <li class="nav nav-list "><i class="fas fa-coffee"></i>@Html.ActionLink("Danh mục món ăn", "Index", "FoodCategories")</li>
                        <li class="nav nav-list "><i class="fas fa-coffee"></i>@Html.ActionLink("Danh mục đồ uống", "Index", "DrinkCategories")</li>
                        <li class="nav nav-list "><i class="fas fa-file"></i>@Html.ActionLink("Đặt bàn", "Index", "BookedTables")</li>
                        <li class="nav nav-list "><i class="fas fa-user"></i>@Html.ActionLink("Tài khoản", "Index", "Accounts")</li>
                        <li class="nav nav-list "><i class="fas fa-table"></i>@Html.ActionLink("Bàn", "Index", "Tables")</li>
                        <li class="nav nav-list "><i class="fas fa-user"></i>@Html.ActionLink("Nhân viên", "Index", "Employees")</li>
                        <li class="nav nav-list "><i class="fas fa-money-bill"></i>@Html.ActionLink("Bills", "Index", "Bills")</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-10 col-list-view">
                @RenderBody()
            </div>
        </div>
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Quản lý quán nước</p>
        </footer> 
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
