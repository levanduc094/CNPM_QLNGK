@model IEnumerable<QuanLyQuanNuoc.Models.Drink>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>            
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayName("Ảnh")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DrinkCategory.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DrinkCategory.name)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.idDrink }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.idDrink }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.idDrink })
        </td>
    </tr>
}

</table>
